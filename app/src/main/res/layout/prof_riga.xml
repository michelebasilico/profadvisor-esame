<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/foto_prof"
        android:layout_width="107dp"
        android:layout_height="136dp"

        android:layout_marginStart="-15dp"
        app:srcCompat="@drawable/einstein" />

    <LinearLayout
        android:layout_width="304dp"
        android:layout_height="137dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nomedocente_rigaProf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans_bold_italic"
            android:paddingLeft="5dp"
            android:text="Nome Docente"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/materiadocente_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/open_sans_italic"
            android:paddingLeft="5dp"
            android:text="Materia Docente"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/emaildocente_text"
            android:layout_width="176dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/open_sans_italic"
            android:paddingLeft="5dp"
            android:text="Email Docente"
            android:textSize="14sp" />

        <RatingBar
            android:id="@+id/ratingBar4"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingLeft="3dp" />


    </LinearLayout>

</LinearLayout>